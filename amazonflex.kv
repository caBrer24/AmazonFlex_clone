<MainWindow>
    MDNavigationLayout:
        id: nav_draw


        MDScreenManager:

            MDScreen:
                BoxLayout:
                    orientation: 'vertical'

                    MDTopAppBar:
                        title: "Navigation Drawer"
                        elevation: 0
                        md_bg_color: 1, 1, 1, 1
                        specific_text_color: "white"
                        left_action_items: [['menu', lambda x: nav_draw.toggle_nav_drawer()]]




            MDScreen:
                MDLabel:
                    text: "Screen 2"


        MDNavigationDrawer:

            id: nav_drawer
            radius: 0, dp(16), dp(16), 0

            MDNavigationDrawerMenu:
                MDNavigationDrawerHeader:
                    padding: "16dp", 0, "16dp", "16dp"
                    spacing: "16dp"

                    MDIcon:
                        icon: "card-account-mail-outline"
                        theme_font_size: "Custom"
                        font_size: "56sp"
                        theme_icon_color: "Custom"
                        icon_color: "black"

                    MDLabel:
                        text: "Gmail"

                        role: "medium"
                        theme_line_height: "Custom"
                        line_height: 0
                        adaptive_height: True
                        theme_text_color: "Custom"
                        text_color: "black"

                MDNavigationDrawerLabel:
                    text: "account@gmail.com"
                    theme_text_color: "Custom"
                    text_color: "black"

