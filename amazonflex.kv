<LoginWindow>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: (450, 785)
            source: 'background_pic.jpg'

        Rectangle:
            pos: self.pos
            size: (450, 150)
    BoxLayout:
        orientation: "vertical"
        padding: 25
        spacing: 10


        MDFlatButton:

            size_hint: (1, None)
            text: "[b]Sign in with Amazon[/b]"
            theme_text_color: "Custom"
            text_color: "white"
            md_bg_color: root.main_orange

        MDRectangleFlatButton:
            markup: True
            id: test
            text: "[b]Create an account[/b]"
            size_hint: (1, None)
            line_color: root.main_orange
            text_color: root.main_orange
            line_width: 1.3
<MainWindow>
    GridLayout:
        cols: 1
        MDFillRoundFlatButton:
            id: test
            text: "Test"